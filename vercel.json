{
    "version": 2,
    "rewrites": [
    { "source": "/(.*)", "destination": "/" }
    ],
    "builds": [
      {
        "src": "public/**",
        "use": "@vercel/static"
      },
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "api/index.php"
      }
    ]
  }
  